@model ForestFireDetection.Models.Sensor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SensorId" />
            <div class="form-group">
                <label asp-for="SensorLocation" class="control-label"></label>
                <input asp-for="SensorLocation" class="form-control" />
                <span asp-validation-for="SensorLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SensorState" class="control-label"></label>
                <input asp-for="SensorState" class="form-control" />
                <span asp-validation-for="SensorState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SensorPositioningDate" class="control-label"></label>
                <input asp-for="SensorPositioningDate" class="form-control" />
                <span asp-validation-for="SensorPositioningDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SensorDangerSituation" /> @Html.DisplayNameFor(model => model.SensorDangerSituation)
                </label>
            </div>
            <div class="row">
                <div class="d-flex justify-content-center gap-3 mt-3">
                    <div class="col-auto">
                        <input type="submit" value="Create" class="btn btn-success px-4" />
                    </div>
                    <div class="col-auto">
                        <a asp-controller="Sensors" asp-action="Index" class="btn btn-outline-secondary px-4" role="button">Cancel</a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>
