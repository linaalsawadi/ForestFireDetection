﻿@using ForestFireDetection.Data;
@model ForestFireDetection.Models.ApplicationUser
@{
	ViewData["Title"] = "Edit Admin";
}

<div class="row ">
	<div class="col-md-12 mt-3">
		<div class="card card-success card-outline">
			<div class="card-header">
				<h3 class="card-title"><i class="fas fa-user-tie"></i> Edit Admin</h3>
			</div>
			<div class="card-body">
				<form asp-controller="Users" asp-action="EditAdmin" method="post">
					<input asp-for="Id" type="hidden" />

					<div class="mb-3">
						<label asp-for="FirstName" class="form-label"></label>
						<input asp-for="FirstName" class="form-control" />
					</div>
					<div class="mb-3">
						<label asp-for="LastName" class="form-label"></label>
						<input asp-for="LastName" class="form-control" />
					</div>
					<div class="mb-3">
						<label asp-for="Email" class="form-label"></label>
						<input asp-for="Email" class="form-control" />
					</div>

					<button type="submit" class="btn btn-black btn-outline-success" style="width:150px">Update</button>
					<a asp-controller="Users" asp-action="ListAdmin" class="btn btn-secondary" style="width:150px">
						Backto List
					</a> 
				</form>
			</div>
		</div>
	</div>
</div>

